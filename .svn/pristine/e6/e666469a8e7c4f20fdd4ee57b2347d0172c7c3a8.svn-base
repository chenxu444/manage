/*reset begin*/
html {
    font-family: 'Helvetica Neue', Helvetica, STHeiTi, Arial, sans-serif;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

body {
    margin: 0;
    line-height: 1.5;
    color: #333333;
    background: #F2F2F2;
    font-size: 14px;
}

h1, h2, h3, h4, p, dl, dd, form {
    margin: 0;
}

a {
    background: transparent;
    text-decoration: none;
    color: #333333;
}

a:active {
    outline: 0;
}

em, i {
    font-style: normal;
}

img {
    border: none;
    vertical-align: top;
    max-width: 100%;
    height: auto;
}

table {
    border-collapse: collapse;
    border-spacing: 0;
}

td, th {
    padding: 0;
}

ul, ol {
    margin: 0;
    padding: 0;
}

li {
    list-style: none;
}

button, input {
    color: inherit;
    margin: 0;
    padding: 0;
    border: 0;
    background: none;
    outline: none;
    font-size: 16px;
}

input[type='text'], input[type='button'], input[type='submit'], input[type=password], input[type='reset'], input[type='date'] {
    -webkit-appearance: none;
}

*, *:before, *:after {
    box-sizing: border-box;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.tc {
    text-align: center;
}

.tr {
    text-align: right;
}

.hide {
    display: none;
}

.block {
    display: block;
}

.clearfix {
    clear: left;
}

.clearfix:after {
    content: '.';
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.wrap {
    overflow: hidden;
    /*超出的隐藏*/
    white-space: nowrap;
    text-overflow: ellipsis;
    /*超出的设置为省略号*/
}

.wrap-2 {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.bt1 {
    border-top: 1px solid #F4F4F4;
}
.bb1 {
    border-bottom: 1px solid #F4F4F4;
}
.bb10 {
    border-bottom: 10px solid #F4F4F4;
}

/* uni 样式 */
uni-input, uni-button {
    font-size: 14px;
}
.uni-common-mt {
    margin-top: 15px;
}
.uni-padding-wrap {
    padding: 0 15px;
}
.uni-flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
    flex-direction: row;
}
.uni-flex-1 {
    -webkit-flex: 1;
    flex: 1;
    -webkit-box-flex: 1;
    width: 1px;
}
.uni-flex-c {
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.uni-flex-j {
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
}

.uni-flex-cc {
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
}

.uni-row {
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
    flex-direction: row;
}
.uni-column {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
    flex-direction: column;
}

.uni-form {
    display: block;
    padding-left: 10px;
}
.uni-form-item {
    height: 46px;
    line-height: 45px;
    border-bottom: 1px solid #EEEEEE;
}
.uni-form-title {
    margin-right: 5px;
    height: 45px;
}
.uni-input, .uni-radio {
    /* #ifndef MP-WEIXIN */
    height: 45px;
    line-height: 45px;
    /* #endif */
    /* #ifdef MP-WEIXIN */
    height: 32px;
    line-height: 32px;
    /* #endif */
    padding: 7px 12px;
    font-size: 14px;
    background: #FFFFFF;
}
.uni-radio {
    line-height: 31px;
}
.uni-radio .uni-radio-input {
    width: 18px;
    height: 18px;
}
/* #ifdef MP-WEIXIN */
/* 单选钮样式 */
radio {
    transform: scale(.78);
}
/* #endif */

uni-page-head .uni-btn-icon {
    margin-top: 6px;
}

.uni-input-placeholder {
    color: #AAAAAA;
}
checkbox {
    transform: scale(.65,.65);
}
